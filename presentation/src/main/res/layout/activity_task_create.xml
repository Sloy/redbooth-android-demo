<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium">

    <com.sloydev.redbooth.view.component.FloatLabelLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:floatLabelTextAppearance="@style/TextAppearance.Redbooth.FloatLabel">

        <EditText
            android:id="@+id/task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/task_create_title"
            android:imeOptions="actionNext"
            android:inputType="text|textCapSentences"
            android:singleLine="true"
            />

    </com.sloydev.redbooth.view.component.FloatLabelLayout>

    <com.sloydev.redbooth.view.component.FloatLabelLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        app:floatLabelTextAppearance="@style/TextAppearance.Redbooth.FloatLabel">

        <EditText
            android:id="@+id/task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/task_create_description"
            android:imeOptions="actionDone"
            android:inputType="text|textCapSentences|textAutoComplete"
            />

    </com.sloydev.redbooth.view.component.FloatLabelLayout>
</LinearLayout>
